package {	import flash.display.MovieClip;	import flash.events.Event;	public class myball extends MovieClip	{		public var speed:Number = 5;		public var accel:Number = .5;		public var maxSpeed:Number = 12;		public var angle:Number = Math.random()*90 + 135;		public var speedX:Number = Math.sin(angle*Math.PI/180)*speed;		public var speedY:Number = Math.cos(angle*Math.PI/180)*speed;		public var speedXInit:Number = speedX;		public var speedYInit:Number = speedY;		public function myball(aX:Number, aY:Number)		{			this.x = aX;			this.y = aY;			addEventListener(Event.ENTER_FRAME, onEnter);		}				public function onEnter(e:Event)		{			y +=  speedY;			x +=  speedX;		}				public function remove()		{			if (this.parent != null)			{				angle = Math.random() * 90 + 135;				speedX = Math.cos(angle * Math.PI / 180) * speed;				speedY = Math.sin(angle * Math.PI / 180) * speed;				speedXInit = Math.cos(angle * Math.PI / 180) * speed;				speedYInit = Math.sin(angle * Math.PI / 180) * speed;				this.parent.removeChild(this);			}		}		public function ballReset()		{			angle = Math.random() * 90 + 135;			speedX = Math.cos(angle * Math.PI / 180) * speed;			speedY = Math.sin(angle * Math.PI / 180) * speed;			speedXInit = Math.cos(angle * Math.PI / 180) * speed;			speedYInit = Math.sin(angle * Math.PI / 180) * speed;		}	}}